import board
import time
from neopixel import NeoPixel
import random

np = NeoPixel(board.D2, 31, auto_write=False, brightness = 0.8)

def sparklliest(pone, ptwo, pfour):
        np.fill(pone)
        np.show()
        for i in range(ptwo):
            np.fill(1, np.n - 1)
            np.show()
            time.sleep(pfour)
while True:
    sparklliest(56, 10, .001)
